<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="农场上的客人"
            android:textColor="#ff333333"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/media_name"/>
    <ImageView
            android:layout_width="145dp"
            android:layout_height="200dp"
            android:id="@+id/cover"
            android:layout_marginTop="65dp"
            app:layout_constraintTop_toBottomOf="@+id/media_name"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <ImageView
            android:id="@+id/playing_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            app:layout_constraintBottom_toBottomOf="@+id/play"
            app:layout_constraintTop_toTopOf="@+id/play"
            app:srcCompat="@drawable/ics_loop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/playing_pre"/>

    <ImageView
            android:id="@+id/playing_pre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            app:srcCompat="@drawable/ics_previous"
            app:layout_constraintBottom_toBottomOf="@+id/play"
            app:layout_constraintTop_toTopOf="@+id/play"
            app:layout_constraintStart_toEndOf="@+id/playing_mode"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/play"/>

    <ImageView
            android:id="@+id/play"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ics_play"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/playing_pre"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/playing_next"/>

    <ImageView
            android:id="@+id/playing_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            app:srcCompat="@drawable/ics_next"
            app:layout_constraintBottom_toBottomOf="@+id/play"
            app:layout_constraintTop_toTopOf="@+id/play"
            app:layout_constraintStart_toEndOf="@+id/play"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/playlist"/>

    <ImageView
            android:id="@+id/playlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            app:layout_constraintBottom_toBottomOf="@+id/play"
            app:layout_constraintTop_toTopOf="@+id/play"
            app:srcCompat="@drawable/ics_list"
            app:layout_constraintStart_toEndOf="@+id/playing_next" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff999999"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/play"
            android:id="@+id/media_played"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff999999"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/play"
            android:id="@+id/media_duration"/>
    <android.support.v7.widget.AppCompatSeekBar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/media_played"
            app:layout_constraintEnd_toStartOf="@+id/media_duration"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/media_played"
            app:layout_constraintBottom_toBottomOf="@+id/media_played"
            android:layout_marginStart="8dp"
            android:max="1000"
            android:id="@+id/media_progress"
            android:background="#f1f1f1"
            android:thumb="@drawable/progress_drawable"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/state"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/cover"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/counting"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ics_clock"
            android:id="@+id/clock"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/media_progress"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/counting"
            app:layout_constraintEnd_toEndOf="@+id/clock"
            app:layout_constraintStart_toStartOf="@+id/clock"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/clock"/>
</android.support.constraint.ConstraintLayout>
